{
  "name": "cosmos",
  "version": "0.2.3",
  "engine": "^7.0.0",
  "private": true,
  "workspaces": ["core/babel-preset", "core/cli", "examples/webpack-hello-world"],
  "dependencies": {},
  "scripts": {
    "scripts": "nps -s",
    "i": "nps-i",
    "dev": "echo Our scripts have changed, run yarn scripts to know more",
    "build": "nps -s production.build",
    "start": "nps -s production.start",
    "test": "nps -s test",
    "sandbox": "start-storybook -p 9001 -s build",
    "chromatic": "chromatic test --storybook-addon --script-name sandbox --exit-zero-on-changes"
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write --single-quote --no-semi --print-width 100", "git add"]
  },
  "devDependencies": {}
}
